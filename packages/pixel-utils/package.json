  },
  "bugs": {
    "url": "https://github.com/fuf-stack/pixels/issues"
  },
  "scripts": {
    "build": "tsup --config node_modules/@repo/tsup-config/config.ts",
    "prepack": "pnpm build"
  },
  "dependencies": {
    "@heroui/theme": "2.4.19",
    "classnames": "2.5.1",
    "slug": "9.1.0",
