// see: https://github.com/redwoodjs/redwood/blob/main/tsconfig.compilerOption.json

{
  "compilerOptions": {
    "declarationMap": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    // see: https://github.com/colinhacks/zod/issues/121
    "strictNullChecks": true
  },
  "exclude": [
    "dist",
    "node_modules"

    // INFO: these will be excluded in packages tsconfig.build.ts (only on tsc build)
    // "**/__tests__",
    // "**/__mocks__",
    // "**/*.cy.*",
    // "**/*.spec.*",
    // "**/*.test.*"
  ]
}
